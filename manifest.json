{
    "name": "Spam Whatsapp Extension",
    "version": "1.0",
    "description": "Joins Whatsapp Groups and saves contacts",
    "manifest_version": 2,
    "permissions": [
        "webNavigation",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}